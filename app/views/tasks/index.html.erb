<h1>My Tasks</h1>
<div class="tasks">
    <% @tasks.each do |task| %>
      <div class="task">


        <% if task.title == nil %>
          <% task.title = "no title" %>
          <h2><%=  link_to task.title, edit_task_path(task), class: "task-link"  %></h2>

        <% else %>
          <h2><%=  link_to task.title, edit_task_path(task), class: "task-link"  %></h2>
          <p><%= task.details %></p>

          <% if task.completed == true %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>

      </div>
        <% end %>

    <% end %>
  </div>
