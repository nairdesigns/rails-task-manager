<h1>My Tasks</h1>
<div class="tasks">
    <% @tasks.each do |task| %>
      <div class="task">


        <% if task.title == nil %>
          <p>no title</p>

        <% else %>
          <h2><%= task.title %></h2>
          <p><%= task.details %></p>

          <% if task.completed == true %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>

        <ul>
          <li><%= link_to task.title, task_path(task), class: "task-link"  %></li>
        </ul>
      </div>
        <% end %>

    <% end %>
  </div>
